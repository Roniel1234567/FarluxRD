{
  "manifest_version": 3,
  "name": "FarluxRD Instagram Scraper",
  "version": "1.0",
  "description": "Extrae automáticamente todas las imágenes del perfil de FarluxRD en Instagram",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extraer Imágenes FarluxRD"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
